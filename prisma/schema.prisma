generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


// schema.prisma
model User {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  email                             String            @unique
  mobile                            String            @unique
  password                          String
  username                          String
  preferance_id                     String?           @db.ObjectId
  watchHistory                     WatchHistory[]
  favoriteGenres                    Genre[]
  dislikedGenres                    Genre[]
}

model MyMovies {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  movie_id                          String            @db.ObjectId
  movie                             Movie             @relation(fields: [movie_id], references: [id])
}

model MyShows {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  tvshow_id                         String            @db.ObjectId
  tvShow                            TVShow            @relation(fields: [tvshow_id], references: [id])
}

model WatchHistory {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  user                              User              @relation(fields: [userId], references: [id])
  userId                            String            @db.ObjectId
  contentId                         String
  watchedOn                         DateTime
  rating                            Int?
}

model Movie {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  title                             String
  description                       String
  genres                            Genre[]
  releaseDate                       DateTime
  director                          String
  actors                            String[]
  liked                             MyMovies[]
}

model TVShow {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  title                             String
  description                       String
  genres                            Genre[]
  episodes                          Episode[]
  liked                             MyShows[]
}

model Episode {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  tvShow                            TVShow            @relation(fields: [tvShowId], references: [id])
  tvShowId                          String            @db.ObjectId
  episodeNumber                     Int
  seasonNumber                      Int
  releaseDate                       DateTime
  director                          String
  actors                            String[]
}

enum Genre {
  Action
  Comedy
  Drama
  Fantasy
  Horror
  Romance
  SciFi
}