generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


// schema.prisma
model User {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  email                             String            @unique
  mobile                            String            @unique
  password                          String
  username                          String
  preferences                       Preferences[]
  whatchHistory                     WatchHistory[]
}


model Preferences {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  userId                            String            @db.ObjectId
  user                              User              @relation(fields: [userId], references: [id])
  favoriteGenres                    Genre[]
  dislikedGenres                    Genre[]
}

model WatchHistory {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  user                              User              @relation(fields: [userId], references: [id])
  userId                            String            @db.ObjectId
  contentId                         String
  watchedOn                         DateTime
  rating                            Int?
}

model Movie {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  title                             String
  description                       String
  genres                            Genre[]
  releaseDate                       DateTime
  director                          String
  actors                            String[]
}

model TVShow {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  title                             String
  description                       String
  genres                            Genre[]
  episodes                          Episode[]
}

model Episode {
  id                                String            @id @default(auto()) @map("_id") @db.ObjectId
  tvShow                            TVShow            @relation(fields: [tvShowId], references: [id])
  tvShowId                          String            @db.ObjectId
  episodeNumber                     Int
  seasonNumber                      Int
  releaseDate                       DateTime
  director                          String
  actors                            String[]
}

enum Genre {
  Action
  Comedy
  Drama
  Fantasy
  Horror
  Romance
  SciFi
}